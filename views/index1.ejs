<!--Carousel-->
<%- include ('./partials/carousel.ejs') %>
  <!--Carousel-->
  <!--Main Content-->
  <div class="container">
    <!-- START CONTENTS__SAPA TOUR -->
    <div class="my-5">
      <div class="my-3">
        <h2 id="tourSapa" class="text-center fw-bold">TOUR SAPA</h2>
        <a class="link-underline link-underline-opacity-0" href="#">
          <p class="text-center text-info fs-5">Xem tất cả tour</p>
        </a>
      </div>

      <article class="mt-3 row row-cols-1 row-cols-md-2 row-cols-xl-4 row-gap-3">
        <% tours.map(item=>{ %>
          <div class="col">
            <div class="card h-100">
              <img src=<%=item.Anh%> class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title">
                  <%=item.TenTour%>
                </h5>
                <p class="card-text">
                  Some quick example text to build on the card title and make
                  up the bulk of the card's content.
                </p>
              </div>
              <div class="card-body d-flex justify-content-between align-items-center">
                <span class="card-text">
                  <%=item.Gia%> VND
                </span>
                <a href="#" class="btn btn-primary" data-bs-toggle="modal"
                  data-bs-target="#exampleModal" data-bs-Tma="<%=item.MaTour%>" data-bs-Tname="<%=item.TenTour%>" data-bs-Tgia="<%=item.Gia%>" >Đặt
                  Tour</a>
              </div>
            </div>
          </div>
          <% }) %>
      </article>
    </div>
    <!-- END CONTENTS__SAPA TOUR -->
  </div>
  <!--Main Content-->
  <%- include ('./partials/modal.ejs') %>