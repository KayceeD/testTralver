<div class="position-relative">
    <img src="../../public/images/banner/banner-danang.jpg" class="w-100 sub-background"/>
    <div class="position-absolute top-50 start-50 translate-middle">
        <h1 class="text-center text-white fw-bold" style="font-size: 5vw;">TOUR KHÁC</h1>
    </div>
  </div>
  <div class="container">
    <!--ALL TOUR-->
    <div class="my-5">
        <div class="my-3">
            <h2 id="tourHalong" class="text-center fw-bold">TẤT CẢ TOUR</h2>
        </div>
  
        <article class="mt-3 row row-cols-1 row-cols-md-2 row-cols-xl-4 row-gap-3">
          <% tours.map(item=>{ %>
            <div class="col">
              <div class="card h-100">
                <img src=<%=item.Anh%> class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title">
                    <%=item.TenTour%>
                  </h5>
                  <p class="card-text">
                    <%=item.description%>
                  </p>
                </div>
                <div class="card-body d-flex justify-content-between align-items-center">
                  <span class="card-text">
                    <%=item.Gia%> VND
                  </span>
                  <a href="#" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-Tma="<%=item.MaTour%>" data-bs-Tname="<%=item.TenTour%>" data-bs-Tgia="<%=item.Gia%>">Đặt
                    Tour</a>
                </div>
              </div>
            </div>
            
            <% }) %>
        </article>
    </div>
  
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
          <% if(current == 1) { %>
            <li class="page-item disabled">
              <a class="page-link">Previous</a>
            </li>
          <% }else { %>
            <li class="page-item">
              <a class="page-link">Previous</a>
          </li>
          <% } %>
            
          <% for(let i = 1;i<=pages;i++){ %>
            <%if(i==current){ %>
              <li class="page-item active"><a class="page-link" href="/tours-khac/<%=i%>"><%=i%></a></li>
            <% }else { %>
              <li class="page-item"><a class="page-link" href="/tours-khac/<%=i%>"><%=i%></a></li>
            
            
          <% }} %>
  
          <% if(current == pages) { %>
            <li class="page-item disabled">
                <a class="page-link" href="#">Next</a>
            </li>
          <% }else { %>
            <li class="page-item">
              <a class="page-link">Next</a>
            </li>
          <% } %>
        </ul>
    </nav>
  
  
  </div>